Subalgoritmo insertarDespuesDelNodo(elemento)
    // La variable Elemento es, al menos en este caso, el elemento que se buscará para añadir el nuevo nodo si se encontró
    Definir dato como Cadena;
    Definir iterador Como EstructuraNombre; // R

    Si primero = null Entonces
        Escribir "No se pueden buscar nodos en una lista vacía!";
        Regresa;
    SiNo
        iterador <- primero;

        Mientras iterador.nombre != elemento y iterador != nulo Hacer
            iterador <- iterador.siguiente;
        FinMientras

        Si iterador = null Entonces
            Escribir "No se encontró el elemento!";
            Regresa;
        FinSi

        nuevo <- crearInstancia();
        Leer dato;

        nuevo.nombre <- dato;
        nuevo.siguiente <- iterador.siguiente;
        iterador.siguiente <- nuevo;
    FinSi
FinSubalgoritmo

Subalgoritmo insertarAntesDelNodo(elemento)
    // La variable Elemento es, al menos en este caso, el elemento que se buscará para añadir el nuevo nodo si se encontró
    Definir dato como Cadena;
    Definir iterador Como EstructuraNombre;
    Definir anterior Como EstructuraNombre; // a
    anterior <- nulo;

    Si primero = null Entonces
        Escribir "No se pueden buscar nodos en una lista vacía!";
        Regresa;
    SiNo
        Si primero.nombre = elemento Entonces
            insertarInicio();
            Regresa;
        FinSi

        iterador <- primero;

        Mientras iterador.nombre != elemento y iterador != nulo Hacer
            anterior <- iterador;
            iterador <- iterador.siguiente;
        FinMientras

        Si iterador = null Entonces
            Escribir "No se encontró el elemento!";
            Regresa;
        FinSi

        nuevo <- crearInstancia();
        Leer dato;

        nuevo.nombre <- dato;
        nuevo.siguiente <- anterior.siguiente;
        anterior.siguiente <- nuevo;
        nuevo.siguiente <- iterador;
    FinSi
FinSubalgoritmo

