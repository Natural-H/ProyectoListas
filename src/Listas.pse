Subalgoritmo insertarFinal()
    Definir dato como Cadena;
    
    Si primero = null Entonces
        nuevo <- crearInstancia();
        Leer dato;

        nuevo.nombre <- dato;
        nuevo.siguiente <- nulo;

        primero <- nuevo;
        ultimo <- primero;
    SiNo
        nuevo <- crearInstancia();
        Leer dato;

        nuevo.nombre <- dato;
        nuevo.siguiente <- nulo;

        ultimo.siguiente <- nuevo;
        ultimo <- nuevo;
    FinSi
FinSubalgoritmo

